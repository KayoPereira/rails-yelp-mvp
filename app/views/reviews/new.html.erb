<div class="container my-3">
  <div class="form-review d-flex justify-content-center align-items-center flex-column">
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <div class="container-input-create">
        <%= f.input :content %>
        <%= f.input :rating %>
      </div>
      <div class="container-link-create d-flex justify-content-center align-items-center">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>