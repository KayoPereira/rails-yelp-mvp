<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: Restaurant::CATEGORY %>
  <div class="d-flex justify-content-center align-items-center">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>